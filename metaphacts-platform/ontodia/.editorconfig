# http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4
