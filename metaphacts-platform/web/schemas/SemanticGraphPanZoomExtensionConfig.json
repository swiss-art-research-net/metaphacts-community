{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This extension creates a controls that lets the user pan and zoom about a graph. This complements the built-in gesture support for panning and zooming by giving less savvy users a more traditional UI -- similar to controls on map.",
    "properties": {
        "fitPadding": {
            "default": 50,
            "description": "Padding when fitting",
            "type": "number"
        },
        "maxZoom": {
            "default": 10,
            "description": "Max zoom level",
            "type": "number"
        },
        "minZoom": {
            "default": 0.1,
            "description": "Min zoom level",
            "type": "number"
        },
        "panDistance": {
            "default": 10,
            "description": "Max pan distance per ticks",
            "type": "number"
        },
        "panDragAreaSize": {
            "default": 75,
            "description": "The length of the pan drag box in which the vector for panning is calculated (bigger = finer control of pan speed and direction)",
            "type": "number"
        },
        "panInactiveArea": {
            "default": 8,
            "description": "Radius of inactive area in pan drap box",
            "type": "number"
        },
        "panIndicatorMinOpacity": {
            "default": 0.5,
            "description": "Min opacity of pan indicator (the draggable nib); scales from this to 1.0",
            "type": "number"
        },
        "panMinPercentSpeed": {
            "default": 0.25,
            "description": "The slowest speed we can pan by (as a percent of panSpeed)",
            "type": "number"
        },
        "panSpeed": {
            "default": 10,
            "description": "How many milliseconds in between pan ticks",
            "type": "number"
        },
        "resetIcon": {
            "default": "'fa fa-expand'",
            "description": "Reset button icon CSS classes",
            "type": "string"
        },
        "sliderHandleIcon": {
            "default": "'fa fa-minus'",
            "description": "Slider handle icon CSS classes",
            "type": "string"
        },
        "zoomDelay": {
            "default": 45,
            "description": "How many milliseconds between zoom ticks",
            "type": "number"
        },
        "zoomFactor": {
            "default": 0.05,
            "description": "Zoom factor per zoom tick",
            "type": "number"
        },
        "zoomInIcon": {
            "default": "'fa fa-plus'",
            "description": "Zoom-in button icon CSS classes",
            "type": "string"
        },
        "zoomOnly": {
            "default": false,
            "description": "A minimal version of the ui only with zooming (useful on systems with bad mousewheel resolution)",
            "type": "boolean"
        },
        "zoomOutIcon": {
            "default": "'fa fa-minus'",
            "description": "Zoom-out button icon CSS classes",
            "type": "string"
        }
    },
    "propertyOrder": [
        "zoomFactor",
        "zoomDelay",
        "minZoom",
        "maxZoom",
        "fitPadding",
        "panSpeed",
        "panDistance",
        "panDragAreaSize",
        "panMinPercentSpeed",
        "panInactiveArea",
        "panIndicatorMinOpacity",
        "zoomOnly",
        "sliderHandleIcon",
        "zoomInIcon",
        "zoomOutIcon",
        "resetIcon"
    ],
    "type": "object"
}

