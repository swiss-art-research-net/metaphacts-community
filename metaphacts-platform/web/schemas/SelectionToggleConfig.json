{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Checkbox to mark rows as selected",
    "properties": {
        "defaultChecked": {
            "description": "Toggles the checkbox by default",
            "type": "boolean"
        },
        "selection": {
            "description": "Name of checkbox listener",
            "type": "string"
        },
        "tag": {
            "description": "Extra data to pass to listener, so that it's possible to\nfigure out, which of checkboxes was toggled",
            "type": "string"
        }
    },
    "propertyOrder": [
        "selection",
        "tag",
        "defaultChecked"
    ],
    "required": [
        "selection",
        "tag"
    ],
    "type": "object"
}

