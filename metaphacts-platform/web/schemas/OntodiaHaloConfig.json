{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Allows selecting a node and triggering of actions.",
    "properties": {
        "id": {
            "default": "halo",
            "description": "Unique ID to register as Ontodia canvas widget and send events.",
            "type": "string"
        },
        "margin": {
            "default": 5,
            "type": "number"
        },
        "scalable": {
            "default": true,
            "type": "boolean"
        },
        "template": {
            "description": "Client-side template for Halo content.",
            "mpSeeResource": {
                "iri": "http://help.metaphacts.com/resource/FrontendTemplating",
                "name": "Client-side templating"
            },
            "type": "string"
        }
    },
    "propertyOrder": [
        "id",
        "scalable",
        "margin",
        "template"
    ],
    "type": "object"
}

