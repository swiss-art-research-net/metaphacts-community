{
    "version": "2.0.0",
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "strict": true,
        "removeComments": true,
        "lib": ["es6", "es2015.promise"],
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "paths": {
			"*" : ["./types/*"]
		},
        "importHelpers": true,
        "jsx": "react",
        "skipLibCheck": true,
		"inlineSources": true
    },
    "exclude": [
      "node_modules",
      "!node_modules/@types"
    ],
    "include": [
      "index.ts"
    ],
    "filesGlob": [
		"**/*.ts",
		"**/*.tsx",
		"./types/**/*.d.ts",
		"./node_modules/@types/**/*.d.ts",
		"!./node_modules/**/*.ts"
    ],
    "atom": {
      "rewriteTsconfig": false
    }
}
