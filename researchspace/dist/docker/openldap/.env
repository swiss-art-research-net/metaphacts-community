# password for main admin user, e.g when LDAP_DOMAIN=example.com
- cn=admin,dc=example,dc=com
LDAP_ADMIN_PASSWORD=password

# password for cn=admin,cn=config user
LDAP_CONFIG_PASSWORD=password

# username for readonly user that will be used by the platform for authentication/authorisation,  e.g when LDAP_DOMAIN=example.com
- cn=platform,dc=example,dc=com
LDAP_READONLY_USER_USERNAME=platform

# password for readonly user
LDAP_READONLY_USER_PASSWORD=password

# e.g example
LDAP_ORGANISATION=example

# domain that will be used as a base DN for ldap
LDAP_DOMAIN=example.com

# certificates location for TLS on the host system
LDAP_CERTS_HOST_LOCATION=/tmp/certs/

# name of the TLS certificate file
LDAP_TLS_CRT_FILENAME=example.com.crt

# name of the root certificate file
LDAP_TLS_CA_CRT_FILENAME=root.crt

# name of the TLS private key file
LDAP_TLS_KEY_FILENAME=example.org.key

# should be set if nginx-proxy is used, specifies the host for pwm
PWM_VIRTUAL_HOST=accounts.example.com

# should be set if nginx-proxy is in use, specifies the host for phpLDAPadmin
PHPLDAPADMIN_VIRTUAL_HOST=ldap.example.com
